@model ContactRegistry.Models.ViewModels.ContactGetCompanyVM


@{
    ViewBag.Title = "GetCompany";
}

<h2>Add Company to contact</h2>
<p>@Model.ContactID</p>
@using (Html.BeginForm("getcompany", "contact", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ContactID)
    <div class="form-group">
        @Html.DropDownListFor(model => model.SelectedCompanyId, Model.Companies, "Choose company", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<p>Save and return to details view of specific contact</p>
<div>
    @Html.ActionLink("Back to Edit", "Edit")
</div>
