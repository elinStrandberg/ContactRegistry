@model ContactRegistry.Models.ViewModels.ContactGetCompanyVM


@{
    ViewBag.Title = "GetCompany";
}

<h2>Connect contact to company</h2>

@using (Html.BeginForm("getcompany", "contact", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ContactID)
    <div class="form-group">

        @Html.DropDownListFor(model => model.SelectedCompanyId, Model.Companies, "Choose company", htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
}

<div>
    @Html.ActionLink("Back to Edit", "Edit", new { id = Model.ContactID })
</div>

